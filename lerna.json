{
  "packages": ["packages/private/*", "packages/public/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "changelogPreset": "conventional-changelog-angular",
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"],
      "message": "build(release): publish [ci skip]"
    }
  }
}
